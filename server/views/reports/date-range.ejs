<!-- server/views/reports/date-range.ejs -->
<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Date Range Report</title>
  <style>
    body { font-family: Arial, sans-serif; }
    .report-header { text-align: center; margin-bottom: 20px; }
    .report-title { font-size: 24px; font-weight: bold; }
    .report-period { font-size: 18px; }
    table { width: 100%; border-collapse: collapse; }
    th, td { border: 1px solid #000; padding: 8px; text-align: left; }
    th { background-color: #f2f2f2; font-weight: bold; }
    .text-right { text-align: right; }
    .total-row { font-weight: bold; }
  </style>
</head>
<body>
  <div class="report-header">
    <div class="report-title"><%= type === 'purchase' ? 'Purchase' : 'Sales' %> Report</div>
    <div class="report-period"><%= new Date(start).toLocaleDateString() %> to <%= new Date(end).toLocaleDateString() %></div>
  </div>

  <table>
    <thead>
      <tr>
        <th>S.No</th>
        <th><%= type === 'purchase' ? 'Supplier' : 'Customer' %> Name</th>
        <th><%= type === 'purchase' ? 'Today Credit' : 'Today Debit' %> / <%= type === 'purchase' ? 'Today Debit' : 'Today Credit' %></th>
      </tr>
    </thead>
    <tbody>
      <% reportData.forEach((item, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= item.name %></td>
          <td class="text-right">
            <% if (type === 'purchase') { %>
              <%= item.credit_amount %> / <%= item.debit_amount %>
            <% } else { %>
              <%= item.debit_amount %> / <%= item.credit_amount %>
            <% } %>
          </td>
        </tr>
      <% }); %>
      <tr class="total-row">
        <td colspan="2">Total</td>
        <td class="text-right">
          <% if (type === 'purchase') { %>
            <%= reportData.reduce((sum, item) => sum + parseFloat(item.credit_amount || 0), 0) %> / 
            <%= reportData.reduce((sum, item) => sum + parseFloat(item.debit_amount || 0), 0) %>
          <% } else { %>
            <%= reportData.reduce((sum, item) => sum + parseFloat(item.debit_amount || 0), 0) %> / 
            <%= reportData.reduce((sum, item) => sum + parseFloat(item.credit_amount || 0), 0) %>
          <% } %>
        </td>
      </tr>
    </tbody>
  </table>
</body>
</html>